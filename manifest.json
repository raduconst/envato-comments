{
  "manifest_version": 2,

  "name": "Envato messages",
  "description": "A little extension that you can use to track the latest comments on your products comments.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://themeforest.net/item/*/*/comments","http://themeforest.net/item/*/*/comments?page=*"],
      "js": [ "envato.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://api.envato.com/",
    "storage",
    "background",
    "notifications"
  ]
}
